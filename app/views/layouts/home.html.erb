<!DOCTYPE html>
<html>
<head>
  <title>DeroseCouchsurfing</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="home">
<div class="navbar">
  <div class="container">
    <div class="navbar-header">
      <a type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-ex-collapse"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></a>
      <a class="navbar-brand logo" href="/"><span>DeROSE CouchSurf</span></a>
    </div>
    <div class="collapse navbar-collapse" id="navbar-ex-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li class="active">
            <a href="#">About</a>
        </li>
        <% if user_signed_in? %>
          <li>
          <%= link_to(t('Logout'), destroy_user_session_path, :method => :delete) %>        
          </li>
        <% else %>
          <li>
          <%= link_to(t('Login'), new_user_session_path)  %>  
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<%= yield %>

</body>
</html>
